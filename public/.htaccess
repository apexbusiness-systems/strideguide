# StrideGuide Production Apache Configuration
# Ensures no-store for HTML, long-lived immutable caching for hashed assets

# No-store for HTML files (marketing pages + auth)
<FilesMatch "\.(html)$">
  Header set Cache-Control "no-store, must-revalidate"
</FilesMatch>

# No-store for service worker
<FilesMatch "^sw\.js$">
  Header set Cache-Control "no-store, must-revalidate"
</FilesMatch>

# Immutable caching for hashed assets (JS, CSS, icons, audio, ML models)
<FilesMatch "\.(js|css|png|jpg|jpeg|gif|svg|webp|woff|woff2|ttf|eot|mp3|wav|ogg|json)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# SPA catch-all rewrite for deep links
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Don't rewrite existing files or directories
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Rewrite all other requests to index.html
  RewriteRule ^(.*)$ /index.html [L,QSA]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
  Header set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "DENY"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "camera=(self), microphone=(), geolocation=(self), payment=()"
  Header set Cross-Origin-Opener-Policy "same-origin"
  Header set Cross-Origin-Resource-Policy "same-origin"
  
  # Content Security Policy (IONOS-compatible)
  Header set Content-Security-Policy "default-src 'self'; connect-src 'self' https://yrndifsbsmpvmpudglcc.supabase.co wss://yrndifsbsmpvmpudglcc.supabase.co https://api.stripe.com; img-src 'self' data: blob: https://*.supabase.co; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com; style-src 'self' 'unsafe-inline'; frame-src https://js.stripe.com https://hooks.stripe.com; base-uri 'self'; form-action 'self' https://checkout.stripe.com; frame-ancestors 'none'"
  
  # CORS for API endpoints
  <FilesMatch "\.(php|json)$">
    Header always set Access-Control-Allow-Origin "https://strideguide.cam"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Authorization, Content-Type, X-Client-Info, apikey"
    Header always set Access-Control-Max-Age "86400"
  </FilesMatch>
</IfModule>
